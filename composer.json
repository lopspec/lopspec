{
  "name": "lopspec/lopspec",
  "description": "Specification-oriented BDD framework for PHP 5.4",
    "keywords": [
        "BDD", "SpecBDD", "TDD", "spec", "specification", "tests", "testing"
    ],
  "homepage": "https://github.com/lopspec/lopspec",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Konstantin Kudryashov",
            "email": "ever.zet@gmail.com",
            "homepage": "http://everzet.com"
        }, {
            "name": "Marcello Duarte",
            "homepage": "http://marcelloduarte.net/"
        }, {
            "name": "Michael Cummings",
            "email": "mgcummings@yahoo.com"
        }
    ],
    "require": {
      "php": ">=5.4.0",
        "dragonrun1/file_path_normalizer": "~1.0",
        "dragonrun1/prophecy": "dev-master",
        "dragonrun1/php-diff": "dev-master",
        "sebastian/exporter": "~1.0",
        "symfony/console": "~2.3",
        "symfony/event-dispatcher": "~2.1",
        "symfony/finder": "~2.1",
        "symfony/process": "~2.1",
        "symfony/yaml": "~2.1",
        "doctrine/instantiator": "~1.0,>=1.0.1"
    },
    "require-dev": {
        "behat/behat": "~3.0,>=3.0.11",
        "dragonrun1/phpspec2-expect": "dev-master",
        "symfony/filesystem": "~2.1"
    },
    "suggest": {
        "dragonrun1/nyan-formatters": "dev-master â€“ Adds Nyan formatters"
    },
    "autoload": {
      "psr-4": {
            "PhpSpec": "src/"
        }
    },
  "bin": ["bin/lopspec"],
    "extra": {
        "branch-alias": {
          "dev-master": "1.0.x-dev"
        }
    }
}
